{
  "name": "image-gallery-native",
  "version": "1.0.0",
  "description": "Image gallery using native JavaScript",
  "main": "index.js",
  "scripts": {
    "build": "gulp build",
    "build-dist": "gulp build-dist",
    "start": "npm run build && gulp serve",
    "serve:test": "gulp build && npx serve dist/ -l 8000",
    "puppeteer": "rm ./test/*.png; SCREEN_SHOT=false mocha test/bootstrap.js test/gallery.test.js",
    "puppeteer-screenshot": "rm ./test/*.png; SCREEN_SHOT=true mocha test/bootstrap.js test/gallery.test.js",
    "lint": "gulp lint",
    "test": "gulp test",
    "serve:coverage": "gulp test && npx serve coverage/lcov-report/ -l 8001"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "strict": [
        "error",
        "global"
      ],
      "semi": 2,
      "no-unused-vars": 2,
      "quotes": [
        "warn",
        "single"
      ],
      "comma-dangle": 2,
      "no-extra-semi": 2,
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-undef": 1,
      "no-unreachable": 2,
      "no-magic-numbers": [
        "warn",
        {
          "ignoreArrayIndexes": true
        }
      ],
      "no-unused-expressions": 1
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    }
  },
  "author": "Connie Leung",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chai": "4.1.2",
    "del": "3.0.0",
    "dotenv": "6.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "5.0.0",
    "gulp-clean-css": "3.9.4",
    "gulp-concat": "2.6.1",
    "gulp-eslint": "5.0.0",
    "gulp-htmlmin": "4.0.0",
    "gulp-if": "2.0.2",
    "gulp-karma": "0.0.5",
    "gulp-replace": "1.0.0",
    "gulp-sass": "4.0.1",
    "gulp-sourcemaps": "2.6.4",
    "gulp-uglify": "3.0.0",
    "gulp4-run-sequence": "^1.0.1",
    "karma": "^4.4.1",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.2",
    "karma-mocha": "1.3.0",
    "mocha": "5.2.0",
    "puppeteer": "^2.1.1",
    "run-sequence": "2.2.1"
  }
}
